page{
  background-color: #aaa;
}
.search_wrap{
  padding:10rpx 20rpx;
}
.search_wrap .search_item{
    display: flex;    
}
.search_wrap .search_item .search_inp{
  flex:7;
  padding:10rpx 10rpx 10rpx 35rpx;
  background-color: #fff;
  margin-right:20rpx;
  border-radius: 5rpx;
}
.search_wrap .search_item .search_btn{
  flex:1;
  padding:10rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 8rpx;
}

/* 搜索内容 */
.search_info_wrap{
  margin-top:30rpx;
}

.search_info_wrap .search_info_list{
  padding:20rpx 5rpx;
  border-bottom:1rpx solid #ccc;
  font-size:26rpx;
  background-color: #fff;

  /* 三行代码实现一行显示 */
  overflow:hidden;
  /* 空格也不换行 */
  white-space:nowrap;
  text-overflow: ellipsis;
}