view {
  color: var(--themeColor);
}
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc的时候要注意 想要原样输出这个代码*/
  /* height:calc(100vh-90rpx)*/
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  /*子项高度 100% flex*/
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  color: #333;
  display: flex;
  height: 80rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .left_menu .active {
  color: #58c085;
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  /*子项高度 100% flex*/
  flex: 5;
}
.cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
.cates .cates_container .right_content .goods_group .goods_title text {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .goods_group .goods_list navigator {
  width: 33.33%;
  padding: 20rpx;
}
.cates .cates_container .right_content .goods_group .goods_list navigator .goods_name {
  color: #333;
  font-weight: 600;
  font-size: 24rpx;
  text-align: center;
}
