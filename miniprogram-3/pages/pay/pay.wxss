/*收货地址显示*/
.add_address{
  display:flex;
  padding:20rpx;
  font-size:28rpx;
}
.add_address .user_info{
  flex:5;
  
}
.add_address .user_tel{
  flex:2;
}

/* 购物车信息 */
.cart_content{

}
.cart_content .cart_title{
  padding:20rpx;
  font-size:36rpx;
  color:#000;
  border-top:1rpx solid #ccc;
  border-bottom:5rpx solid red;
}
.cart_content .cart_main{
  
}
.cart_content .cart_main .cart_main_item{
  display:flex;
  padding:10rpx;
  border-bottom:1rpx solid #ccc;

}
.cart_content .cart_main .cart_main_item .cart_photo{
    flex:2;
    display:flex;
    justify-content: center;
    align-items: center;
}
.cart_content .cart_main .cart_main_item .cart_photo image{
    width: 80%;
}
.cart_content .cart_main .cart_main_item .cart_info{
  flex:4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_main_item .cart_info .goods_name{
  /* 小圆点 */
  display: -webkit-box;
  overflow:hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color:#666;
}
.cart_content .cart_main .cart_main_item .cart_info .goods_intro_group{
    display: flex;
    justify-content: space-between;
}
.cart_content .cart_main .cart_main_item .cart_info .goods_intro_group .goods_price{
  color:red;
  font-size:34rpx;
}
.cart_content .cart_main .cart_main_item .cart_info .goods_intro_group .goods_select{
  display: flex;
}

.cart_content .cart_main .cart_main_item .cart_info .goods_intro_group .goods_select .g_s_num{
      width: 55rpx;
      height:55rpx;
      display: flex;
      justify-content: center;
      align-items: center;
}

/* 底部工具栏 */
.footer_tool{
  border-top:1rpx solid #ccc;
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  display:flex;
  height:90rpx;
  background-color: #fff;
}

.footer_tool .total{
    flex:4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-right:15rpx;
}
.footer_tool .total .total_top{
  text-align: right;
}
.footer_tool .total .total_top .total_t_comp{
  color:#000;
  font-weight: 600;
}
.footer_tool .total .total_top .total_t_price{
  color:red;
}
.footer_tool .total .total_bottom{
    font-size:24rpx;
    color:#000;
    font-weight:600;
    text-align: right;
}
.footer_tool .settle{
  flex:2;
  display:flex;
  justify-content: center;
  align-items: center;
  height:100%;
  font-size:32rpx;
  color:#fff;
  background:red;
}